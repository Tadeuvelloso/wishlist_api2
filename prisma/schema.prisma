generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model movies {
  id          Int     @id @default(autoincrement())
  genre       String  @db.VarChar(50)
  name        String  @unique
  platform    String
  description String?
  watched     Boolean
  entity      String
  user        users   @relation(fields: [userid], references: [id])
  userid      Int     @unique
}

model users {
  id        Int   @id @default(autoincrement())
  email     String @unique
  password  String @db.VarChar(50)
  movies    movies[]
  session   session[]
}

model session {
  id        Int   @id @default(autoincrement())
  user      users @relation(fields: [userId], references: [id])
  userId    Int   
}